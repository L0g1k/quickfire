{
    "name": "Quickfire",
    "version": "0.5",
    "manifest_version": 2,
    "description": "A code editor for HTML, CSS and JavaScript",
    "icons": {
        "128": "src/chrome/img/icon_128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "src/thirdparty/jquery-2.0.1.js",
                "src/thirdparty/requirejs/require.js",
                "src/chrome/background.js"
            ]
        }
    },
    "permissions": [
        {
            "socket": ["tcp-connect", "tcp-listen"]
        },
        "storage",
        "fileSystem",
        "fileSystem.retainEntries",
        "fileSystem.write",
        "fileSystem.directory",
        "unlimitedStorage",
        "clipboardRead",
        "clipboardWrite"
    ],
    "offline_enabled": true

}
